<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/chinaGreen</item>
        <item name="colorPrimaryDark">@color/chinaGreen</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppStart" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:background">@drawable/welcome</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 横向线条 -->
    <style name="h_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">#e7e7e7</item>
    </style>

    <style name="user_face_image">
        <item name="android:layout_width">40.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:padding">1.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/widget_dface</item>
    </style>

    <style name="comment_user_face_image">
        <item name="android:layout_width">28.0dip</item>
        <item name="android:layout_height">28.0dip</item>
        <item name="android:padding">1.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/widget_dface</item>
    </style>

</resources>
